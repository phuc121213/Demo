<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <title>CRUD với Phuc Kun</title>
</head>
<body>
    <div class="container">
       <div class="row">
        <form action="/post-crud" method="POST">
            <div class="form-row">
                <div class="col-12 mt-3">Tạo tài khoản người dùng</div>
                
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Mã người dùng:</label>
                    <input type="text" class="form-control" name="maGV" placeholder="Nhập người dùng">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputAddress">Họ và tên:</label>
                    <input type="text" class="form-control" name= "hoTen" placeholder="Nhập họ và tên">
                </div>
                
                <div class="form-group col-md-6">
                    <label for="inputAddress">Địa chỉ:</label>
                    <input type="text" class="form-control" name = "diachi" placeholder="Nhập địa chỉ">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputAddress">Ngày sinh:</label>
                    <input type="text" class="form-control" name = "ngaysinh" placeholder="0000/00/00">
                </div><i class="fa fa-y-combinator" aria-hidden="true"></i>
                <div class="form-group col-md-6">
                    <label for="inputCity">Số điện thoại</label>
                    <input type="text" class="form-control" name="sdt" placeholder="Nhập số điện thoại">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Email:</label>
                    <input type="email" class="form-control"  name="email" placeholder="Email">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4">Password:</label>
                    <input type="password" class="form-control" name ="password" placeholder="Password">
                </div>
                <div class="form-group col-md-3">
                    <label for="inputState">Giới tính</label>
                    <select name="gioiTinh" class="form-control">
                    <option value="1">Nam</option>
                    <option value="0">Nữ</option>
                    </select>
                </div>
                
                <div class="form-group col-md-3">
                    <label for="inputZip">Người dùng</label>
                    <select name="roleid" class="form-control">
                        <option value="1">Admin</option>
                        <option value="2">Nhân viên đào tạo</option>
                        <option value="3">Nhân viên đăng ký</option>
                        <option value="4">Giảng viên</option>
                        <option value="5">Học viên</option>
                    </select>
                </div>
            </div>
                <button type="submit" class="btn btn-primary">Submit</button>
        </form>
       </div>
    </div>     
            
</body>
</html>